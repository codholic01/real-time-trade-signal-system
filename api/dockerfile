FROM python:3.10-slim

WORKDIR /app

# Copy shared backend code
COPY ingestion ./ingestion
COPY ranking ./ranking
COPY db ./db
COPY api ./api

# Install dependencies
RUN pip install --no-cache-dir \
    fastapi \
    uvicorn \
    redis \
    psycopg2-binary \
    websocket-client \
    requests

EXPOSE 8000

CMD ["uvicorn", "api.main:app", "--host", "0.0.0.0", "--port", "8000"]
